
<div class="block">
    <p class="name link" @onclick=@OnClick>@Name</p>
    <p class="description link" @onclick=@OnClick>@LastMessage</p>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = null!;
    [Parameter]
    public string LastMessage { get; set; } = null!;
    [Parameter]
    public Action OnClick { get; set; } = () => { };
}

<style>
    .block {
        margin: 0 2% 14px -10px;
        padding: 5px 0 4px 20px;
        background-color: var(--neutral-low-dark);
        /* background: linear-gradient(90deg, var(--neutral-low-dark) 0%, var(--neutral-low-dark) 10%, rgba(165,204,146,1) 70%, rgba(165,204,146,1) 100%); */
        border: none;
        border-radius: 150px 200px 200px 80px;
        padding-top: 1rem;
    }

        .block:hover, .block:focus {
            /* background-color: var(--neutral); */
            background: linear-gradient(90deg, rgba(250,250,250,0.1) 0%, var(--neutral-low-dark) 20%, rgba(165,204,146,0.2) 70%, rgba(165,204,146,0.5) 100%);
        }

    .name {
        font-weight: 700;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        display: contents;
    }

    .description {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        width: clamp(200px, 90%, 3000px);
        padding-left: 5px;
        padding-top: 2px;
    }

    .link:hover {
        cursor: pointer;
    }
</style>
